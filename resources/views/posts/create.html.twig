        <div class="form-group">
            <label for="postTitle">Title</label>
            <input type="text" class="form-control" id="postTitle">
        </div>
        <div class="form-group">
            <label for="postContent">Content</label>
            <textarea class="form-control" id="postContent"></textarea>
        </div>
